<% @body_id = "signinpage" %>
<div class="row" align="center" style="margin-top: 10%">
<div class="col-sm-6 col-sm-offset-3">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => 'form-2' }) do |f| %>
  <h1><span class="log-in">Sign in</span></h1>
  <p class="float">
    <%= f.label :email, "Email Address" %>
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "email" %>
  </p>
  <p class="float">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off",  class: "email", placeholder: "Password" %>
  </p>
  <p class="clearfix" align="center">    
    <%= f.submit "Sign in"%>
  </p>   
<% end %>
</div>
</div>