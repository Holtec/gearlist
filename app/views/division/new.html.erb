<div class="row">
  <div class="col-sm-6 col-sm-offset-3" align="center">
    <h1>
       Create a new division
    </h1>
    <% @division = Division.new %>
		<%= form_for @division, url: create_division_path, method: :post, html: { class: "", id: "" } do |f| %>
			<div class="row">
				<div class="col-sm-8 col-sm-offset-2">
					<%= f.label :name, "Division name:" %>
					<%= f.text_field :name, placeholder: "Manufacturing", class: 'form-control', required: true %>
				</div>
			</div>
			<br/>
			<div class="row">
				<div class="col-sm-8 col-sm-offset-2">
					<%= f.label :location, "Division location:" %>
					<%= f.text_field :location, placeholder: "New York", class: 'form-control' %>
				</div>
			</div>
			<br/>
            <div class="row">
				<div class="col-sm-2 col-sm-offset-5">
                    <%= f.submit "Save", class: "btn btn-success btn-block" %>
                </div>
            </div>
		<% end %>
  </div>
</div>